{
  "name": "collaborative-document-editor",
  "version": "1.0.0",
  "description": "Real-time collaborative document editor with React and Node.js",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev-simple": "concurrently \"npm run server-simple\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "server-simple": "cd server && npm run dev-simple",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": ["collaborative", "editor", "real-time", "react", "nodejs"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
